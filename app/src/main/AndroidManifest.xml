            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".StaffCreate"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".CreateCompany"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".StaffDashboard"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden">
        </activity>

        <activity
            android:name=".StaffEdit"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden">
        </activity>

    </application>

</manifest>