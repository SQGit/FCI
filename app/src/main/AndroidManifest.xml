            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".StaffLogin"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".AdminDashboard"
            android:screenOrientation="landscape"
