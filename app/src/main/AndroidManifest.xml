        </activity>
        <activity
            android:name=".Dashboard"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".AdminLogin"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".StaffLogin"
            android:screenOrientation="landscape"
