<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginLeft="-30dp"
                android:id="@+id/tv_header"
                android:background="@drawable/background_tv"
                android:paddingBottom="@dimen/_6sdp"
                android:drawableLeft="@drawable/back_ico"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingLeft="50dp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_6sdp"
                android:text="Dashboard"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_gravity="center"
            android:id="@+id/lt_create_staff"
            android:background="@drawable/newone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dr_img" />

                <TextView
                    android:id="@+id/tv_create_staff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/_45sdp"
                    android:gravity="center|center_vertical|center_horizontal"
                    android:drawableLeft="@drawable/edit_comp_ico"
                    android:text="Create Staff"
                    android:textSize="@dimen/_13sdp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/dr_img"
                android:rotation="180" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_gravity="center"
            android:id="@+id/lt_edit_staff"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/newone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dr_img" />





            <TextView
                android:id="@+id/tv_edit_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_47sdp"
                android:gravity="center|center_vertical|center_horizontal"
                android:drawableLeft="@drawable/edit_comp_ico"
                android:text="Edit Staff"
                android:textSize="@dimen/_13sdp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/dr_img"
                android:rotation="180" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_gravity="center"
            android:id="@+id/lt_create_company"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/newone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dr_img" />




            <TextView
                android:id="@+id/tv_create_companey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_46sdp"
                android:gravity="center|center_vertical|center_horizontal"
                android:drawableLeft="@drawable/create_comp_ico"
                android:text="Create Company"
                android:textSize="@dimen/_13sdp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/dr_img"
                android:rotation="180" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_gravity="center"
            android:id="@+id/lt_edit_company"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/newone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dr_img" />




            <TextView
                android:id="@+id/tv_edit_companey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_46sdp"
                android:gravity="center|center_vertical|center_horizontal"
                android:drawableLeft="@drawable/create_comp_ico"
                android:text="Edit Company"
                android:textSize="@dimen/_13sdp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/dr_img"
                android:rotation="180" />
        </RelativeLayout>






