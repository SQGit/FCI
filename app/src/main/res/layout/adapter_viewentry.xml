<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_vinno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/entry_bg"
            android:ems="10"
            android:singleLine="true"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="FORM23424923432   "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/entry_bg"
            android:ems="10"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="paul"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_startgug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/entry_bg"
            android:ems="6"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="240 gallons"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/view_entry_ico" />

        <TextView
            android:id="@+id/tv_endgug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="View"
            android:singleLine="true"

            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_endgug2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="Pending"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

</LinearLayout>