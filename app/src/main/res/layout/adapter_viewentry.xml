<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_vinno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/entry_bg"
            android:ems="10"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="FORM23424923432   "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/entry_bg"
            android:ems="10"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="paul"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_startgug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/entry_bg"
            android:ems="6"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="240 gallons"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical|center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:src="@drawable/view_entry_ico" />

        <!--<TextView
            android:id="@+id/tv_endgug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text=""
            android:singleLine="true"

            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />-->


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_endgug2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="6"
            android:gravity="center"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingTop="@dimen/_6sdp"
            android:singleLine="true"
            android:text="Pending"
            android:textColor="@color/whit"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>