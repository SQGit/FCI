<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginLeft="-30dp"
                android:background="@drawable/background_tv"
                android:paddingBottom="@dimen/_6sdp"
                android:paddingLeft="50dp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_6sdp"
                android:text="Dashboard"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"

        android:orientation="vertical">

        <EditText
            android:id="@+id/createstaff_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/createstaf_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:editable="false"
            android:ems="25"
            android:hint="Create Staff"
            android:paddingLeft="@dimen/_10sdp" />

        <EditText
            android:id="@+id/editstaff_id"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/editstaf_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:ems="25"
            android:editable="false"
            android:hint="Edit Staff"
            android:paddingLeft="@dimen/_10sdp" />

        <EditText
            android:id="@+id/createcompany_id"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/createstaf_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:ems="25"
            android:editable="false"
            android:hint="Create Company"
            android:paddingLeft="@dimen/_10sdp" />


        <EditText
            android:id="@+id/et_edit_company"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/createstaf_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:ems="25"
            android:editable="false"
            android:hint="Edit Company"
            android:paddingLeft="@dimen/_10sdp" />


    </LinearLayout>


</LinearLayout>