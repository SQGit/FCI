<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginLeft="-30dp"
                android:background="@drawable/background_tv"
                android:paddingBottom="@dimen/_6sdp"
                android:paddingLeft="50dp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_6sdp"
                android:text="Create Company"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"

        android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/compyname_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:ems="25"
            android:hint="Company Name"
            android:inputType="text"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/cmpyloc_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:ems="25"
            android:hint="Company Location"
            android:inputType="text"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="65dp"

            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/name_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:ems="25"
            android:hint="Manager Name"
            android:inputType="text"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="65dp"

            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/phone_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:ems="25"
            android:hint="Phone"
            android:singleLine="true"
            android:inputType="text"
            android:paddingLeft="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/submit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_icon" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">


    </LinearLayout>
</LinearLayout>