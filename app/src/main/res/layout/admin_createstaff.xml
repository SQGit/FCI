<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginLeft="-30dp"
            android:background="@drawable/background_tv"
            android:drawableLeft="@drawable/back_ico"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="50dp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_6sdp"
            android:text="Create Staff"
            android:textColor="#ffffff"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Hi Admin,"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_11sdp" />

            <LinearLayout
                android:id="@+id/layout_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="2dp"
                    android:text="Logout"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorPrimaryDark" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/newone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/dr_img" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical">


                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/name_ico"
                            android:drawablePadding="@dimen/_5sdp"
                            android:hint="Name"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName"
                            android:maxLength="15"
                            android:paddingLeft="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/dr_img"
                        android:rotation="180" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/newone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/dr_img" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical">


                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/phone_ico"
                            android:drawablePadding="@dimen/_6sdp"
                            android:hint="Phone"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingLeft="@dimen/_12sdp"
                            android:singleLine="true"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/dr_img"
                        android:rotation="180" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/pass_ico"
                        android:drawablePadding="@dimen/_5sdp"
                        android:ems="14"
                        android:hint="Password"
                        android:paddingLeft="@dimen/_3sdp"
                        android:textColor="@color/textColorDark"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_pin1"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/pin_square_bg"
                            android:ems="1"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:paddingLeft="@dimen/_1sdp"
                            android:singleLine="true"
                            android:textColor="@color/textColorDark"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_14sdp" />

                        <EditText
                            android:id="@+id/et_pin2"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/pin_square_bg"
                            android:ems="1"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:paddingLeft="@dimen/_1sdp"

                            android:singleLine="true"
                            android:textColor="@color/textColorDark"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_14sdp" />

                        <EditText
                            android:id="@+id/et_pin3"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/pin_square_bg"
                            android:ems="1"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:paddingLeft="@dimen/_1sdp"
                            android:singleLine="true"
                            android:textColor="@color/textColorDark"

                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_14sdp" />

                        <EditText
                            android:id="@+id/et_pin4"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/pin_square_bg"
                            android:ems="1"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:paddingLeft="@dimen/_1sdp"
                            android:singleLine="true"
                            android:textColor="@color/textColorDark"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_14sdp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_repassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/pass_ico"
                        android:drawablePadding="@dimen/_5sdp"
                        android:ems="14"
                        android:hint="Retype Password"
                        android:maxLength="1"
                        android:paddingLeft="@dimen/_3sdp"
                        android:textColor="@color/textColorDark"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_repin1"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/pin_square_bg"
                            android:ems="1"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:paddingLeft="@dimen/_1sdp"
                            android:singleLine="true"
                            android:textColor="@color/textColorDark"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_14sdp" />

                        <EditText
                            android:id="@+id/et_repin2"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/pin_square_bg"
                            android:ems="1"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:paddingLeft="@dimen/_1sdp"
                            android:singleLine="true"
                            android:textColor="@color/textColorDark"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_14sdp" />

                        <EditText
                            android:id="@+id/et_repin3"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/pin_square_bg"
                            android:ems="1"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:paddingLeft="@dimen/_1sdp"
                            android:singleLine="true"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_14sdp" />

                        <EditText
                            android:id="@+id/et_repin4"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/pin_square_bg"
                            android:ems="1"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:paddingLeft="@dimen/_1sdp"
                            android:singleLine="true"
                            android:textColor="@color/textColorDark"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_14sdp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/submit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_ico" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>