<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginLeft="-30dp"
            android:background="@drawable/background_tv"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="50dp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_6sdp"
            android:text="Create Staff"
            android:textColor="#ffffff"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Hi Admin,"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_11sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_logout"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="2dp"
                    android:text="Logout"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorPrimaryDark" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/name_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:ems="15"
            android:id="@+id/et_name"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rectangle_bg_et"
            android:drawableLeft="@drawable/phone_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:ems="15"
            android:hint="Phone"
            android:id="@+id/et_phone"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:ems="14"
                android:hint="Password"
                android:paddingLeft="@dimen/_3sdp"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_pin1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/pin_square_bg"
                    android:ems="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_pin2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/pin_square_bg"
                    android:ems="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_pin3"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/pin_square_bg"
                    android:ems="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:paddingLeft="15dp"
                    android:singleLine="true"

                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_pin4"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/pin_square_bg"
                    android:ems="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"

            android:orientation="vertical">


            <TextView
                android:id="@+id/repassword_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:ems="14"
                android:maxLength="1"
                android:hint="Retype Password"
                android:paddingLeft="@dimen/_3sdp"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_repin1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/pin_square_bg"
                    android:ems="1"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_repin2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/pin_square_bg"
                    android:ems="1"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_repin3"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/pin_square_bg"
                    android:ems="1"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_repin4"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/pin_square_bg"
                    android:ems="1"
                    android:maxLength="1"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/submit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_icon" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">


    </LinearLayout>
</LinearLayout>