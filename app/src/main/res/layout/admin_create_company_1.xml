<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="4.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginLeft="-30dp"
                android:background="@drawable/background_tv"
                android:paddingBottom="@dimen/_6sdp"
                android:id="@+id/tv_header"
                android:paddingLeft="50dp"
                android:drawableLeft="@drawable/back_ico"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_6sdp"
                android:text="Create Company"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/newone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dr_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:hint="Company Name"
                    android:id="@+id/et_comp_name"
                    android:drawableLeft="@drawable/comp_name_ico"
                    android:paddingLeft="@dimen/_10sdp"
                    android:inputType="textPersonName"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/dr_img"
                android:rotation="180" />
        </RelativeLayout>





        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/newone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dr_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:hint="Company Location"
                    android:id="@+id/et_comp_location"
                    android:drawableLeft="@drawable/comp_loc_ico"
                    android:paddingLeft="@dimen/_10sdp"
                    android:inputType="textPersonName"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/dr_img"
                android:rotation="180" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/newone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dr_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:hint="Company Email"
                    android:id="@+id/et_comp_email"
                    android:drawableLeft="@drawable/comp_loc_ico"
                    android:paddingLeft="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/dr_img"
                android:rotation="180" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/newone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dr_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:hint="Manager Name"
                    android:id="@+id/et_manager_name"
                    android:drawableLeft="@drawable/name_ico"
                    android:paddingLeft="@dimen/_10sdp"
                    android:inputType="textPersonName"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/dr_img"
                android:rotation="180" />
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/newone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dr_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:hint="Phone"
                    android:id="@+id/et_manager_phone"

                    android:drawableLeft="@drawable/phone_ico"
                    android:paddingLeft="@dimen/_10sdp"
                    android:inputType="phone"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/dr_img"
                android:rotation="180" />
        </RelativeLayout>



