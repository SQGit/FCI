<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#66000000"
    android:gravity="center"
    android:paddingBottom="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/back_imag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingTop="@dimen/_20sdp">

            <TextView
                android:id="@+id/staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/staff_id"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Krijith"
                android:textColor="@color/bg1"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1"
            android:gravity="center">

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:background="@color/bg1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll2"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form No:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/form_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FORM324059459423"
                android:textColor="@color/bg1"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:layout_below="@id/ll3"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/listbg"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/ic_star" />

                <com.github.gcacace.signaturepad.views.SignaturePad
                    android:id="@+id/signature_pad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="4"
                    app:penColor="@color/material_blue_grey_95" />

                <TextView
                    android:id="@+id/tv_sign_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Manager Sign"
                    android:textColor="@color/bg1"
                    android:textSize="@dimen/_22sdp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="25dp"

                    android:background="@drawable/sign_hand_icon" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@color/bg1" />

                <TextView
                    android:id="@+id/tv_sign_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:text="Reset"
                    android:textColor="@color/bg1"
                    android:textSize="@dimen/_13sdp" />


            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll4"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/approve_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/approve_ico" />

                <TextView
                    android:id="@+id/approve_tv"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Approve"
                    android:textColor="@color/bg1"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reject_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/reject_ico" />

                <TextView
                    android:id="@+id/reject_tv"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Reject"
                    android:textColor="@color/bg1"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>