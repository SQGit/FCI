<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_vinno"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/entry_bg"
            android:drawableRight="@drawable/scan_ico"
            android:ems="10"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="Scan Vin   "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/entry_bg"
            android:ems="10"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_startgug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/entry_bg"
            android:ems="6"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="1/4 Tank"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_endgug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/entry_bg"
            android:ems="6"
            android:gravity="left"
            android:padding="@dimen/_5sdp"
            android:text="3/4 Tank"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

</LinearLayout>