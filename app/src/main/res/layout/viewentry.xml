<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginLeft="-30dp"
            android:background="@drawable/background_tv"
            android:drawableLeft="@drawable/back_ico"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="50dp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_6sdp"
            android:text="View Entry"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/staff_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Hi Admin,"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_11sdp" />

            <LinearLayout
                android:id="@+id/layout_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/logout_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="2dp"
                    android:text="Logout"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorPrimaryDark" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Company:"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_10sdp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_comp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:text="Company1"
                android:textColor="@color/textColorDark"

                android:textSize="@dimen/_10sdp"
                android:visibility="invisible" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"

                android:background="@color/bg2"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:text="Manager:"
                android:textColor="@color/textColorDark"

                android:textSize="@dimen/_10sdp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_manager1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:text="raman"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_10sdp"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:gravity="center"
                android:text="Date:"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tv_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:text="01/07/2016"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_10sdp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/bg2" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:text="Time:"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:text="18:57"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_80sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/listview_bg"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:fadeScrollbars="false"
                android:scrollbarSize="@dimen/_2sdp"
                android:scrollbarThumbHorizontal="@drawable/scrl"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/tv_formno"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="FormNo"
                            android:textColor="@color/textColorDark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_staff"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="StaffName"
                            android:textColor="@color/textColorDark"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Total Gallons"
                            android:textColor="@color/textColorDark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_view"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="View"
                            android:textColor="@color/textColorDark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Status"
                            android:textColor="@color/textColorDark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_tot"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Total Vehicles"
                            android:textColor="@color/textColorDark"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"></ListView>
                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">


    </LinearLayout>
</LinearLayout>